int noise = 2; 
int yellowLed = 13; 
int redLed = 12;
unsigned long yellowLedOnTime = 0; 
const unsigned long yellowLedDuration = 1000; 

void setup() {
  Serial.begin(9600); 
  pinMode(noise, INPUT); 
  pinMode(yellowLed, OUTPUT); 
  pinMode(redLed, OUTPUT); 
}

void loop() {
  int data = digitalRead(noise); 
  Serial.println(data); 

  unsigned long currentTime = millis(); 

  if (data == 1) { 
    digitalWrite(yellowLed, HIGH);
    yellowLedOnTime = currentTime;

    
    digitalWrite(redLed, HIGH);  
    delay(200);                 
    digitalWrite(redLed, LOW);   
    delay(200);                  
  } else {
    
    if (currentTime - yellowLedOnTime < yellowLedDuration) {
      digitalWrite(yellowLed, HIGH);
    } else {
      digitalWrite(yellowLed, LOW); 
    }
   
    digitalWrite(redLed, LOW);
  }

  delay(50); 
}

